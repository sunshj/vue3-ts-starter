{
  "name": "vue3-ts-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --open",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "format": "prettier --write src",
    "lint": "eslint src",
    "style:lint": "stylelint --cache --fix \"src/**/*.{vue,css,scss}\" --cache --cache-location node_modules/.cache/stylelint/",
    "prepare": "husky install",
    "commit": "git-cz"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@vueuse/core": "^10.8.0",
    "axios": "^1.6.7",
    "darkreader": "4.9.58",
    "dayjs": "^1.11.10",
    "echarts": "^5.5.0",
    "element-plus": "^2.5.6",
    "mavon-editor": "^3.0.1",
    "monaco-editor": "^0.39.0",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.1",
    "vue": "^3.4.19",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@sunshj/eslint-config": "^1.0.6",
    "@sunshj/prettier-config": "^1.0.0",
    "@sunshj/stylelint-config": "^1.0.2",
    "@sunshj/vite-plugins": "^0.1.0",
    "@types/node": "^20.11.20",
    "@vitejs/plugin-vue": "^4.6.2",
    "commitlint": "^18.6.1",
    "cz-git": "^1.8.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.2",
    "prettier": "^2.8.8",
    "sass": "^1.71.1",
    "stylelint": "^16.2.1",
    "typescript": "^5.3.3",
    "unplugin-auto-import": "^0.16.7",
    "unplugin-icons": "^0.16.6",
    "unplugin-vue-components": "^0.26.0",
    "unplugin-vue-router": "^0.6.4",
    "vite": "^4.5.2",
    "vite-plugin-vue-layouts": "^0.9.1",
    "vue-tsc": "^1.8.27"
  },
  "prettier": "@sunshj/prettier-config",
  "stylelint": {
    "extends": "@sunshj/stylelint-config"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "lint-staged": {
    "src/**/*.{vue,js,ts}": "eslint --fix"
  }
}
