{
  "name": "vue3-ts-starter",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --open",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "format": "prettier --write src",
    "lint": "eslint .",
    "type-check": "vue-tsc --noEmit",
    "stylelint": "stylelint --cache --fix \"src/**/*.{vue,css,scss}\" --cache --cache-location node_modules/.cache/stylelint/",
    "commit": "git-cz"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@vueuse/core": "^10.8.0",
    "axios": "^1.6.7",
    "dayjs": "^1.11.10",
    "echarts": "^5.5.0",
    "element-plus": "^2.5.6",
    "mavon-editor": "^3.0.1",
    "monaco-editor": "^0.39.0",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.1",
    "vue": "^3.4.19",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@sunshj/commitlint-config": "^1.0.0",
    "@sunshj/eslint-config": "^1.0.6",
    "@sunshj/prettier-config": "^1.0.0",
    "@sunshj/stylelint-config": "^1.0.2",
    "@sunshj/vite-plugins": "^0.1.5",
    "@types/node": "^20.11.20",
    "@vitejs/plugin-vue": "^4.6.2",
    "commitizen": "^4.3.0",
    "commitlint": "^18.6.1",
    "cz-git": "^1.8.0",
    "eslint": "^8.56.0",
    "lint-staged": "^15.2.2",
    "prettier": "^2.8.8",
    "sass": "^1.71.1",
    "simple-git-hooks": "^2.11.1",
    "stylelint": "^16.2.1",
    "typescript": "^5.3.3",
    "unplugin-auto-import": "^0.16.7",
    "unplugin-icons": "^0.16.6",
    "unplugin-vue-components": "^0.26.0",
    "unplugin-vue-router": "^0.6.4",
    "vite": "^4.5.2",
    "vite-plugin-vue-layouts": "^0.9.1",
    "vue-tsc": "^1.8.27"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "pnpm": {
    "overrides": {
      "array-includes": "npm:@nolyfill/array-includes@^1",
      "array.prototype.flat": "npm:@nolyfill/array.prototype.flat@^1",
      "array.prototype.flatmap": "npm:@nolyfill/array.prototype.flatmap@^1",
      "array.prototype.tosorted": "npm:@nolyfill/array.prototype.tosorted@^1",
      "es-iterator-helpers": "npm:@nolyfill/es-iterator-helpers@^1",
      "has": "npm:@nolyfill/has@^1",
      "is-core-module": "npm:@nolyfill/is-core-module@^1",
      "isarray": "npm:@nolyfill/isarray@^1",
      "object.assign": "npm:@nolyfill/object.assign@^1",
      "object.entries": "npm:@nolyfill/object.entries@^1",
      "object.fromentries": "npm:@nolyfill/object.fromentries@^1",
      "object.hasown": "npm:@nolyfill/object.hasown@^1",
      "object.values": "npm:@nolyfill/object.values@^1",
      "string.prototype.matchall": "npm:@nolyfill/string.prototype.matchall@^1"
    }
  },
  "lint-staged": {
    "*.{vue,js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{vue,css,scss}": [
      "pnpm stylelint"
    ]
  },
  "prettier": "@sunshj/prettier-config",
  "stylelint": {
    "extends": "@sunshj/stylelint-config"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx --no-install commitlint --config commitlint.config.js --edit $1"
  }
}
